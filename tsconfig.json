{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [ "dom", "ES2019" ],
    "module": "CommonJS",
    "outDir": "build",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2019"
  },
  "include": [
    "./lib/**/*.ts",
    "./lib/**/*.tsx",
    "./test/**/*.ts",
    "./test/**/*.tsx"
  ],
  "exclude": [
    "./build",
    "./styleguide/out",
    "./styleguide/.next",
    "./test/shared/sampleApplication/out",
    "./test/shared/sampleApplication/.next"
  ]
}
